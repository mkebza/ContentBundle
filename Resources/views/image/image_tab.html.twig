{% trans_default_domain 'admin' %}

<hr>

<div class="row">
    {% for image in images %}
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail {{ main is not null and main == image ? 'thumbnail-highlight' }}">
                <img class="img-fluid" src="{{ vich_uploader_asset(image, 'image')|imagine_filter('admin') }}" alt="{{ image.name }}">
                <div class="caption">
                    <h3>{{ image.name }}</h3>

                    <div class="btn-group">
                        {#{% if main is not null and setMainRoute is not null%}#}
                            {#<a href="{{ setMainRoute|call(image) }}" class="btn btn-default btn-sm">#}
                                {#<i class="fa fa-eye"></i>#}
                            {#</a>#}
                        {#{% endif %}#}

                        {% if is_granted('ROLE_IMAGE_EDIT', image) %}
                            <a class="btn btn-default btn-sm" href="{{ path('admin_image_edit', {'id': image.id}) }}">
                                <i class="fa fa-edit"></i>
                            </a>
                        {% endif %}

                        {% if is_granted('ROLE_IMAGE_DELETE', image) %}
                            <a class="btn btn-danger btn-sm" href="{{ path('admin_image_delete', {'id': image.id}) }}">
                                <i class="fa fa-remove"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
